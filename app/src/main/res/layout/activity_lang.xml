<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smaz.adamlearning.Lang"
    android:background="@drawable/language">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center"
        android:gravity="center_vertical|fill_vertical|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:id="@+id/img_en"
            android:src="@drawable/language_04"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/en_lan"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:id="@+id/img_ar"
            android:src="@drawable/language_09"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/ar_lan"
            android:layout_below="@+id/img_en"
            android:layout_alignLeft="@+id/img_en"
            android:layout_alignStart="@+id/img_en"
            android:layout_marginTop="62dp"
            android:scaleType="fitXY" />
    </LinearLayout>

</RelativeLayout>
